{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "outDir": "./build",
    "baseUrl": "./src",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}