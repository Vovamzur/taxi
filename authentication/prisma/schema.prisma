datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:password@localhost:5432/authService?schema=public"
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  CLIENT
  DRIVER
  ADMIN
}

enum SexType {
  MALE
  FEMALE
}

model User {
  id        Int      @default(autoincrement()) @id
  role      Role     @default(CLIENT)
  username  String   @unique
  password  String
  fio       String?
  sex       SexType?
  age       Int?
  avatarUrl String?
}